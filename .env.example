# 打卡接口URL
PUNCH_URL=https://example.com/api/attendance/app/attendance/punchCard

# 认证Token (必须配置)
PUNCH_TOKEN=your_token_here

# 应用版本号
APP_VERSION_NUMBER=3

# 飞书机器人Webhook (可选)
FEISHU_BOT_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook_here

# 智谱AI API Key (可选，用于生成有情绪价值的消息)
ZHIPU_API_KEY=your_zhipu_api_key_here

# 可选：TLS 证书处理
# 当后端使用私有/自签名证书时，优先提供自定义 CA 证书路径
CUSTOM_CA_CERT_PATH=/absolute/path/to/ca.crt
# 如需临时跳过 TLS 证书校验（仅在受控测试环境使用）
ALLOW_INSECURE_TLS=false